{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Interdependent Way Article",
  "type": "object",
  "required": ["article_id", "name", "description", "applies_to"],
  "properties": {
    "article_id": {"type": "string", "minLength": 1},
    "name": {"type": "string", "minLength": 1},
    "description": {"type": "string", "minLength": 1},
    "applies_to": {"type": "array", "items": {"type": "string"}, "minItems": 1},
    "failure_modes": {"type": "array", "items": {"type": "string"}},
    "metrics_hint": {"type": "array", "items": {"type": "string"}},
    "notes": {"type": "string"}
  },
  "additionalProperties": false
}

